@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage

<div class="top-row ps-3 navbar">
    @if (localStorage.GetItemAsString("token") != null)
        {
            <div>
                <p class="btn btn-info">@Convert.ToString(localStorage.GetItem<string>("user_nom"))</p>
                <button class="btn btn-outline-danger" @onclick="logOut">Se déconnecter</button>
            </div>
        }
        else
        {
            <NavLink class="nav-link" href="login">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Se connecter
            </NavLink>
        }
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (isAdmin)
        {
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="equipe">
                <span class="oi oi-plus" aria-hidden="true"></span> Equipe
            </NavLink>
        </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="avantages">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Avantages
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {

    private bool collapseNavMenu = true;
    private bool isAdmin = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {
        if (localStorage.GetItem<string>("user_roles") == "Admin")
        {
            isAdmin = true;
            Console.WriteLine(isAdmin);
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private void logOut()
    {
        localStorage.Clear();
    }
}
